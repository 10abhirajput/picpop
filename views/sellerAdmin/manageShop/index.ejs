<%- include('../partials/header'); %>

<!-- Main Content -->
<div class="main-content">
    <section class="section">
        <div class="section-header">
            <h1 id="animated_box"><%= currentModule; %></h1>
        </div>

        <div class="section-body animate__animated  animate__backInUp">

            <div class="row">
                <div class="col-8 offset-2">
                    <div class="card">
                        <div class="card-header">
                            <h4><%= currentSubModule %></h4>
                        </div>
                        <div class="card-body">
                            <form id="userAddEditForm" class="form_advanced_validation"
                                action="/sellerAdmin/user/updateUser" method="POST" autocomplete="off"
                                enctype="multipart/form-data">

                                <div class="form-group">
                                    <label>Shop Name</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">
                                                <i class="fas fa-user"></i>
                                            </div>
                                        </div>
                                        <input type="text" class="form-control" name="shopName" value="<%= adminData.vendorDetail.shopName; %>" required>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label>Shop Logo</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">
                                                <i class="fas fa-user"></i>
                                            </div>
                                        </div>
                                        <div id="image-preview" class="image-preview"
                                            style="background-image: url('<%= adminData.vendorDetail.shopLogo; %>'); background-size: cover; background-position: center center;">
                                            <label for="image-upload" id="image-label">Choose File</label>
                                            <input type="file" name="shopLogo" id="image-upload" />
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label>City</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">
                                                <i class="fas fa-user"></i>
                                            </div>
                                        </div>
                                        <input type="text" class="form-control" name="city" value="<%= adminData.vendorDetail.city; %>" required>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label>State</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">
                                                <i class="fas fa-user"></i>
                                            </div>
                                        </div>
                                        <input type="text" class="form-control" name="state" value="<%= adminData.vendorDetail.state; %>" required>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label>Country</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">
                                                <i class="fas fa-user"></i>
                                            </div>
                                        </div>
                                        <input type="text" class="form-control" name="country" value="<%= adminData.vendorDetail.country; %>" required>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label>Geo Location</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">
                                                <i class="fas fa-globe"></i>
                                            </div>
                                        </div>
                                        <input type="text" class="form-control" name="geoLocation" value="<%= adminData.vendorDetail.geoLocation; %>" required>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label>Shop Address</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">
                                                <i class="fas fa-store"></i>
                                            </div>
                                        </div>
                                        <textarea class="summernote-page" name="shopAddress"><%= adminData.vendorDetail.shopAddress; %></textarea>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label>Shop Description</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">
                                                <i class="fas fa-store"></i>
                                            </div>
                                        </div>
                                        <textarea class="summernote-page" name="shopDescription"><%= adminData.vendorDetail.shopDescription; %></textarea>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label>Payment Policy</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">
                                                <i class="fas fa-store"></i>
                                            </div>
                                        </div>
                                        <textarea class="summernote-page" name="paymentPolicy"><%= adminData.vendorDetail.paymentPolicy; %></textarea>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label>Delivery Policy</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">
                                                <i class="fas fa-store"></i>
                                            </div>
                                        </div>
                                        <textarea class="summernote-page" name="deliveryPolicy"><%= adminData.vendorDetail.deliveryPolicy; %></textarea>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label>Seller Information</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">
                                                <i class="fas fa-store"></i>
                                            </div>
                                        </div>
                                        <textarea class="summernote-page" name="sellerInformation"><%= adminData.vendorDetail.sellerInformation; %></textarea>
                                    </div>
                                </div>

                                <input type="hidden" class="form-control" name="redirectUrl" value="/sellerAdmin/manageShop" required>
                                <div class="form-group row mb-4">
                                    <div class="col-sm-12 col-md-7 offset-4">
                                        <button type="submit" class="btn btn-primary">Update</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>
</div>


<%- include('../partials/footer'); %>

<script>
    if (jQuery().summernote) {
        $(".summernote-page").summernote({
            dialogsInBody: true,
            minHeight: 250,
            focus: true,
            toolbar: [
                ['style', ['bold', 'italic', 'underline', 'clear']],
                ['font', ['bold', 'underline', 'clear', 'strikethrough']],
                ['fontname', ['fontname']],
                ['fontsize', ['fontsize']],
                ['para', ['ul', 'ol', 'paragraph']],
                ['color', ['color']],
                ['table', ['table']],
                ['view', [
                    // 'fullscreen', 
                    'codeview', 'help']]
            ]
        });
    }
</script>