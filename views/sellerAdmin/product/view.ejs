<%- include('../partials/header'); %>

<%


%>

<!-- Main Content -->
<div class="main-content">
  <section class="section">
    <div class="section-header">
      <h1 id="animated_box"><%= currentModule; %></h1>
    </div>

    <div class="section-body animate__animated  animate__backInUp">

      <div class="row">
        <div class="col-8 offset-2">
          <div class="card">
            <div class="card-header">
              <h4><%= currentSubModule %></h4>
            </div>
            <div class="card-body">
              <form id="productAddEditForm" class="form_advanced_validation"
                action="/sellerAdmin/product/addUpdateProduct" method="POST" autocomplete="off"
                enctype="multipart/form-data">

                <div class="form-group">
                  <label> Category</label>
                  <div class="input-group">
                    <!-- <div class="input-group-prepend">
                      <div class="input-group-text">
                        <i class="fas fa-list"></i>
                      </div>
                    </div> -->
                    <select id="productCategorySelect" name="categoryId" class="form-control select2" disabled >
                      <option value="">Select Category</option>
                      <% categories.forEach(category => { %>
                      <option value="<%= category.id; %>"
                        <%= product && product.categoryId == category.id ? 'selected' : ''; %>>
                        <%= category.name; %>
                      </option>
                      <% }) %>
                    </select>
                  </div>
                </div>
                
                <div class="form-group">
                  <label>Name</label>
                  <div class="input-group">
                    <!-- <div class="input-group-prepend">
                      <div class="input-group-text">
                        <i class="fas fa-cube"></i>
                      </div>
                    </div> -->
                    <input type="text" class="form-control" name="name" value="<%= product.name; %>" disabled>
                  </div>
                </div>

                <div class="form-group">
                  <label>Description</label>
                  <div class="input-group">
                    <!-- <div class="input-group-prepend">
                      <div class="input-group-text">
                        <i class="fas fa-cube"></i>
                      </div>
                    </div> -->
                    <textarea class="form-control" name="description" style="min-height: 100px;"
                      disabled><%= product.description; %></textarea>
                  </div>
                </div>

                <div class="form-group">
                  <label>Brand Name</label>
                  <div class="input-group">
                    <!-- <div class="input-group-prepend">
                      <div class="input-group-text">
                        <i class="fas fa-cube"></i>
                      </div>
                    </div> -->
                    <input type="text" class="form-control" name="brandName" value="<%= product.brandName; %>" disabled>
                  </div>
                </div>

                <div class="form-group">
                  <label>Minimum Selling Price</label>
                  <div class="input-group">
                    <!-- <div class="input-group-prepend">
                      <div class="input-group-text">
                        <i class="fas fa-dollar-sign"></i>
                      </div>
                    </div> -->
                    <input type="text" class="form-control" name="minimumSellingPrice"
                      value="<%= product.minimumSellingPrice; %>" disabled>
                  </div>
                </div>

                <div class="form-group">
                  <label> Percentage Discount</label>
                  <div class="input-group">
                    <!-- <div class="input-group-prepend">
                      <div class="input-group-text">
                        <i class="fas fa-percent"></i>
                      </div>
                    </div> -->
                    <input type="text" class="form-control" name="percentageDiscount"
                      value="<%= product.percentageDiscount; %>" disabled>
                  </div>
                </div>

                <div class="form-group">
                  <label> Tax Category</label>
                  <div class="input-group">
                    <!-- <div class="input-group-prepend">
                      <div class="input-group-text">
                        <i class="fas fa-percent"></i>
                      </div>
                    </div> -->
                    <input type="text" name="taxCategoryId" class="form-control"
                      value="<%= product.taxCategory.taxCategory; %>" required disabled>
                  </div>
                </div>

                <div class="form-group">
                  <label> Length</label>
                  <div class="input-group">
                    <!-- <div class="input-group-prepend">
                      <div class="input-group-text">
                        <i class="fas fa-ruler-vertical"></i>
                      </div>
                    </div> -->
                    <input type="text" class="form-control" name="length" value="<%= product.length; %>" required
                      disabled>
                  </div>
                </div>

                <div class="form-group">
                  <label> Width</label>
                  <div class="input-group">
                    <!-- <div class="input-group-prepend">
                      <div class="input-group-text">
                        <i class="fas fa-ruler-vertical"></i>
                      </div>
                    </div> -->
                    <input type="text" class="form-control" name="width" value="<%= product.width; %>" required
                      disabled>
                  </div>
                </div>

                <div class="form-group">
                  <label> Height</label>
                  <div class="input-group">
                    <!-- <div class="input-group-prepend">
                      <div class="input-group-text">
                        <i class="fas fa-ruler-vertical"></i>
                      </div>
                    </div> -->
                    <input type="text" class="form-control" name="height" value="<%= product.height; %>" required
                      disabled>
                  </div>
                </div>

                <div class="form-group">
                  <label>Dimensions Unit</label>
                  <div class="input-group">
                    <!-- <div class="input-group-prepend">
                      <div class="input-group-text">
                        <i class="fas fa-ruler-vertical"></i>
                      </div>
                    </div> -->
                    <select name="dimensionsUnit" class="form-control select2" required disabled>
                      <option value="">Select Dimensions Unit</option>
                      <option value="0" <%= product && product.dimensionsUnit == 0 ? 'selected' : ''; %>>
                        Centimeters</option>
                      <option value="1" <%= product && product.dimensionsUnit == 1 ? 'selected' : ''; %>>
                        Inches</option>
                      <option value="2" <%= product && product.dimensionsUnit == 2 ? 'selected' : ''; %>>
                        Meters</option>
                    </select>
                  </div>
                </div>

                <div class="form-group">
                  <label> Weight</label>
                  <div class="input-group">
                    <!-- <div class="input-group-prepend">
                      <div class="input-group-text">
                        <i class="fas fa-weight"></i>
                      </div>
                    </div> -->
                    <input type="text" class="form-control" name="weight" value="<%= product.weight; %>" required
                      disabled>
                  </div>
                </div>

                <div class="form-group">
                  <label>Weight Unit</label>
                  <div class="input-group">
                    <!-- <div class="input-group-prepend">
                      <div class="input-group-text">
                        <i class="fas fa-ruler-vertical"></i>
                      </div>
                    </div> -->
                    <select name="weightUnit" class="form-control select2" required disabled>
                      <option value="">Select Dimensions Unit</option>
                      <option value="0" <%= product && product.weightUnit == 0 ? 'selected' : ''; %>>
                        KG</option>
                      <option value="1" <%= product && product.weightUnit == 1 ? 'selected' : ''; %>>
                        Pounds</option>
                    </select>
                  </div>
                </div>

                <div class="form-group">
                  <label> Tax Category</label>
                  <div class="input-group">
                    <!-- <div class="input-group-prepend">
                      <div class="input-group-text">
                        <i class="fas fa-percent"></i>
                      </div>
                    </div> -->
                    <select name="taxCategoryId" class="form-control select2" required disabled>
                      <option value="">Select Tax Category</option>
                      <% taxCategories.forEach(taxCategory => { %>
                      <option value="<%= taxCategory.id; %>"
                        <%= product.taxCategoryId == taxCategory.id ? 'selected' : ''; %>>
                        <%= taxCategory.taxCategory; %>
                      </option>
                      <% }) %>
                    </select>
                  </div>
                </div>

                <div class="form-group">
                  <label>Tags</label>
                  <div class="input-group">
                    <!-- <div class="input-group-prepend">
                      <div class="input-group-text">
                        <i class="fas fa-tags"></i>
                      </div>
                    </div> -->
                    <select name="tags" class="form-control select2_tags" multiple required disabled>
                      <% productTags.forEach(productTag => { %>
                      <option value="<%= productTag.tag; %>" selected>
                        <%= productTag.tag; %>
                      </option>
                      <% }) %>
                    </select>
                  </div>
                </div>

                <div class="form-group">
                  <label>Status</label>
                  <div class="input-group">
                    <!-- <div class="input-group-prepend">
                      <div class="input-group-text">
                        <i class="fas fa-percent"></i>
                      </div>
                    </div> -->
                    <select name="status" class="form-control select2" required disabled>
                      <!-- <option value="">Select Tax Type</option> -->
                      <option value="0" <%= product && product.status == 0 ? 'selected' : ''; %>>
                        Inactive</option>
                      <option value="1" <%= product && product.status == 1 ? 'selected' : ''; %>>
                        Active</option>
                    </select>
                  </div>
                </div>

                <div class="form-group row mb-4">
                  <div class="col-sm-12 col-md-7 offset-4">
                    <input type="hidden" class="form-control" name="id" value="<%= product.id %>">
                    <button type="button" class="btn btn-secondary cancel_btn">Back</button>
                    <!-- <button type="submit" class="btn btn-primary">Update</button> -->
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

  </section>
</div>


<%- include('../partials/footer'); %>

<script>
  $(document).ready(function () {



  });
</script>