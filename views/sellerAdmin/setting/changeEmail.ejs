<form id="changeEmailSettingForm" method="POST" autocomplete="off" enctype="multipart/form-data">
    <div class="card" >
        <div class="card-header">
            <h4>Change Email</h4>
        </div>
        <div class="card-body">

            <div class="form-group row align-items-center">
                <label for="site-title" class="form-control-label col-sm-3 text-md-right">New Email</label>
                <div class="col-sm-6 col-md-9">
                    <input type="text" class="form-control" name="newEmail" value="">
                </div>
            </div>

            <div class="form-group row align-items-center">
                <label for="site-title" class="form-control-label col-sm-3 text-md-right">Confirm New Email</label>
                <div class="col-sm-6 col-md-9">
                    <input type="text" class="form-control" name="confirmNewEmail" value="">
                </div>
            </div>

            
            <div class="form-group row align-items-center">
                <label for="site-title" class="form-control-label col-sm-3 text-md-right">Current Password</label>
                <div class="col-sm-6 col-md-9">
                    <input type="password" class="form-control" name="currentPassword" value="">
                </div>
            </div>

            <input type="hidden" class="form-control" name="redirectUrl" value="/sellerAdmin/setting" required>

        </div>
        <div class="card-footer bg-whitesmoke text-md-right">
            <input type="hidden" name="id" value="<%= admin.id; %>" />
            <input type="hidden" name="role" value="<%= admin.role; %>" />
            <button type="submit" class="btn btn-primary" id="save-btn">Save Changes</button>
        </div>
    </div>
</form>