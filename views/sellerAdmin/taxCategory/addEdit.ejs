<%- include('../partials/header'); %>

<!-- Main Content -->
<div class="main-content">
    <section class="section">
        <div class="section-header">
            <h1 id="animated_box"><%= currentModule; %></h1>
        </div>

        <div class="section-body animate__animated  animate__backInUp">

            <div class="row">
                <div class="col-8 offset-2">
                    <div class="card">
                        <div class="card-header">
                            <h4><%= currentSubModule %></h4>
                        </div>
                        <div class="card-body">
                            <form id="userAddEditForm" class="form_advanced_validation"
                                action="/sellerAdmin/taxCategory/addUpdateTaxCategory" method="POST" autocomplete="off"
                                enctype="multipart/form-data">

                                <div class="form-group">
                                    <label>Tax Category</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">
                                                <i class="fas fa-hand-holding-usd"></i>
                                            </div>
                                        </div>
                                        <input type="text" class="form-control" name="taxCategory"
                                            value="<%= taxCategory && taxCategory.taxCategory; %>" required>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label>Tax In Percent</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">
                                                <i class="fas fa-percent"></i>
                                            </div>
                                        </div>
                                        <select name="taxInPercent" class="form-control select2" required>
                                            <!-- <option value="">Select Tax Type</option> -->
                                            <option value="0"
                                                <%= taxCategory && taxCategory.taxInPercent == 0 ? 'selected' : ''; %>>
                                                No</option>
                                            <option value="1"
                                                <%= taxCategory && taxCategory.taxInPercent == 1 ? 'selected' : ''; %>>
                                                Yes</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label>Value</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">
                                                <i class="fas fa-hand-holding-usd"></i>
                                            </div>
                                        </div>
                                        <input type="text" class="form-control" name="taxValue"
                                            value="<%= taxCategory && taxCategory.taxValue; %>" required>
                                    </div>
                                </div>

                                <% if (taxCategory) { %>
                                <input type="hidden" class="form-control" name="id"
                                    value="<%= taxCategory && taxCategory.id; %>" required>
                                <% } %>
                                <input type="hidden" class="form-control" name="redirectUrl"
                                    value="/sellerAdmin/taxCategory" required>

                                <div class="form-group row mb-4">
                                    <div class="col-sm-12 col-md-7 offset-4">
                                        <button type="submit"
                                            class="btn btn-primary"><%= taxCategory ? 'Update' : 'Submit'; %></button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>
</div>


<%- include('../partials/footer'); %>