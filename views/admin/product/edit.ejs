<%- include('../partials/header'); %>

<%

  console.log(product, '=============>product'); 
  console.log(productTags, '=============>productTags'); 


%>

<!-- Main Content -->
<div class="main-content">
  <section class="section">
    <div class="section-header">
      <h1 id="animated_box"><%= currentModule; %></h1>
    </div>

    <div class="section-body animate__animated  animate__backInUp">

      <div class="row">
        <div class="col-8 offset-2">
          <div class="card">
            <div class="card-header">
              <h4><%= currentSubModule %></h4>
            </div>
            <div class="card-body">
              <form id="productAddEditForm" class="form_advanced_validation"
                action="/admin/product/addUpdateProduct" method="POST" autocomplete="off"
                enctype="multipart/form-data">

                <div class="form-group">
                  <label> Category</label>
                  <div class="input-group">
                    <!-- <div class="input-group-prepend">
                      <div class="input-group-text">
                        <i class="fas fa-list"></i>
                      </div>
                    </div> -->
                    <select id="productCategorySelect" name="categoryId" class="form-control select2" required>
                      <option value="">Select Category</option>
                      <% categories.forEach(category => { %>
                      <option value="<%= category.id; %>"
                        <%= product && product.categoryId == category.id ? 'selected' : ''; %>>
                        <%= category.name; %>
                      </option>
                      <% }) %>
                    </select>
                  </div>
                </div>

                <div class="form-group">
                  <label>Name</label>
                  <div class="input-group">
                    <!-- <div class="input-group-prepend">
                      <div class="input-group-text">
                        <i class="fas fa-cube"></i>
                      </div>
                    </div> -->
                    <input type="text" class="form-control" name="name" value="<%= product.name; %>" required>
                  </div>
                </div>


                <div class="form-group">
                  <label>Image</label>
                  <div class="input-group">
                    <!-- <div class="input-group-prepend">
                      <div class="input-group-text">
                        <i class="fas fa-image"></i>
                      </div>
                    </div> -->
                    <div id="image-preview" class="image-preview"
                    style="background-image: url('<%= product.image; %>'); background-size: cover; background-position: center center;">
                      <label for="image-upload" id="image-label">Choose File</label>
                      <input type="file" name="image" id="image-upload" />
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <label>Description</label>
                  <div class="input-group">
                    <!-- <div class="input-group-prepend">
                      <div class="input-group-text">
                        <i class="fas fa-cube"></i>
                      </div>
                    </div> -->
                    <textarea class="form-control" name="description" style="min-height: 100px;"
                      required><%= product.description; %></textarea>
                  </div>
                </div>

                <div class="form-group">
                  <label>Brand Name</label>
                  <div class="input-group">
                    <!-- <div class="input-group-prepend">
                      <div class="input-group-text">
                        <i class="fas fa-cube"></i>
                      </div>
                    </div> -->
                    <input type="text" class="form-control" name="brandName" value="<%= product.brandName; %>" required>
                  </div>
                </div>

                <div class="form-group">
                  <label>Minimum Selling Price</label>
                  <div class="input-group">
                    <!-- <div class="input-group-prepend">
                      <div class="input-group-text">
                        <i class="fas fa-dollar-sign"></i>
                      </div>
                    </div> -->
                    <input type="text" class="form-control" name="minimumSellingPrice"
                      value="<%= product.minimumSellingPrice; %>" required>
                  </div>
                </div>

                <div class="form-group">
                  <label> Percentage Discount</label>
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <div class="input-group-text">
                        <i class="fas fa-percent"></i>
                      </div>
                    </div>
                    <input type="text" class="form-control" name="percentageDiscount"
                      value="<%= product.percentageDiscount; %>" >
                  </div>
                </div>

                <div class="form-group">
                  <label> Length</label>
                  <div class="input-group">
                    <!-- <div class="input-group-prepend">
                      <div class="input-group-text">
                        <i class="fas fa-ruler-vertical"></i>
                      </div>
                    </div> -->
                    <input type="text" class="form-control" name="length" value="<%= product.length; %>" >
                  </div>
                </div>

                <div class="form-group">
                  <label> Width</label>
                  <div class="input-group">
                    <!-- <div class="input-group-prepend">
                      <div class="input-group-text">
                        <i class="fas fa-ruler-vertical"></i>
                      </div>
                    </div> -->
                    <input type="text" class="form-control" name="width" value="<%= product.width; %>"  >
                  </div>
                </div>

                <div class="form-group">
                  <label> Height</label>
                  <div class="input-group">
                    <!-- <div class="input-group-prepend">
                      <div class="input-group-text">
                        <i class="fas fa-ruler-vertical"></i>
                      </div>
                    </div> -->
                    <input type="text" class="form-control" name="height" value="<%= product.height; %>"  >
                  </div>
                </div>

                <div class="form-group">
                  <label>Dimensions Unit</label>
                  <div class="input-group">
                    <!-- <div class="input-group-prepend">
                      <div class="input-group-text">
                        <i class="fas fa-ruler-vertical"></i>
                      </div>
                    </div> -->
                    <select name="dimensionsUnit" class="form-control select2"  >
                      <option value="">Select Dimensions Unit</option>
                      <option value="0" <%= product && product.dimensionsUnit == 0 ? 'selected' : ''; %>>
                        Centimeters</option>
                      <option value="1" <%= product && product.dimensionsUnit == 1 ? 'selected' : ''; %>>
                        Inches</option>
                      <option value="2" <%= product && product.dimensionsUnit == 2 ? 'selected' : ''; %>>
                        Meters</option>
                    </select>
                  </div>
                </div>

                <div class="form-group">
                  <label> Weight</label>
                  <div class="input-group">
                    <!-- <div class="input-group-prepend">
                      <div class="input-group-text">
                        <i class="fas fa-weight"></i>
                      </div>
                    </div> -->
                    <input type="text" class="form-control" name="weight" value="<%= product.weight; %>"  >
                  </div>
                </div>

                <div class="form-group">
                  <label>Weight Unit</label>
                  <div class="input-group">
                    <!-- <div class="input-group-prepend">
                      <div class="input-group-text">
                        <i class="fas fa-ruler-vertical"></i>
                      </div>
                    </div> -->
                    <select name="weightUnit" class="form-control select2"  >
                      <option value="">Select Dimensions Unit</option>
                      <option value="0" <%= product && product.weightUnit == 0 ? 'selected' : ''; %>>
                        KG</option>
                      <option value="1" <%= product && product.weightUnit == 1 ? 'selected' : ''; %>>
                        Pounds</option>
                    </select>
                  </div>
                </div>

                <div class="form-group">
                  <label> Tax Category</label>
                  <div class="input-group">
                    <!-- <div class="input-group-prepend">
                      <div class="input-group-text">
                        <i class="fas fa-percent"></i>
                      </div>
                    </div> -->
                    <select name="taxCategoryId" class="form-control select2"  >
                      <option value="">Select Tax Category</option>
                      <% taxCategories.forEach(taxCategory => { %>
                      <option value="<%= taxCategory.id; %>"
                        <%= product.taxCategoryId == taxCategory.id ? 'selected' : ''; %>>
                        <%= taxCategory.taxCategory; %>
                      </option>
                      <% }) %>
                    </select>
                  </div>
                </div>

                <div class="form-group">
                  <label>Tags</label>
                  <div class="input-group">
                    <!-- <div class="input-group-prepend">
                      <div class="input-group-text">
                        <i class="fas fa-tags"></i>
                      </div>
                    </div> -->
                    <select name="tags" class="form-control select2_tags" multiple>
                      <% productTags.forEach(productTag => { %>
                      <option value="<%= productTag.tag; %>" selected>
                        <%= productTag.tag; %>
                      </option>
                      <% }) %>
                    </select>
                  </div>
                </div>

                <div class="product_specification_container">
                  <div class="row">
                    <div class="col-5 col-md-5 col-lg-5">
                      <div class="form-group">
                        <label>Product Specification Name</label>

                        <div class="input-group">
                          <!-- <div class="input-group-prepend">
                            <div class="input-group-text">
                              <i class="fas fa-signature"></i>
                            </div>
                          </div> -->
                          <input type="text" class="form-control" name="specificationName"
                            value="<%= productSpecifications && productSpecifications.length > 0 ? productSpecifications[0].name : '' %>"
                            >
                        </div>
                      </div>
                    </div>
                    <div class="col-5 col-md-5 col-lg-5">
                      <label>Product Specification Value</label>
                      <div class="form-group">
                        <div class="input-group">
                          <!-- <div class="input-group-prepend">
                            <div class="input-group-text">
                              <i class="fas fa-signature"></i>
                            </div>
                          </div> -->
                          <input type="text" class="form-control" name="speecificationValue"
                            value="<%= productSpecifications && productSpecifications.length > 0 ? productSpecifications[0].value : '' %>"
                            >
                        </div>
                      </div>
                    </div>
                    <div class="col-2 col-md-2 col-lg-2">
                      <%
                          if (productSpecifications && productSpecifications.length > 0) {
                      %>
                      <input type="hidden" class="form-control" name="speecificationId"
                        value="<%= productSpecifications && productSpecifications.length > 0 ? productSpecifications[0].speecificationId : '' %>"
                        >
                      <%
                          }
                      %>
                    </div>
                  </div>

                  <%- productSpecificationsHTML %>
                </div>

                <div class="row">
                  <a href="javascript:void(0)" class="btn btn-icon btn-primary add_product_specification"
                    style="width: calc(83.3% + -12px);"><i class="fas fa-plus"></i></a>
                </div>
                <br />
                <br />
                <br />

                <div class="form-group">
                  <label>Status</label>
                  <div class="input-group">
                    <!-- <div class="input-group-prepend">
                      <div class="input-group-text">
                        <i class="fas fa-percent"></i>
                      </div>
                    </div> -->
                    <select name="status" class="form-control select2"  >
                      <!-- <option value="">Select Tax Type</option> -->
                      <option value="0" <%= product && product.status == 0 ? 'selected' : ''; %>>
                        Inactive</option>
                      <option value="1" <%= product && product.status == 1 ? 'selected' : ''; %>>
                        Active</option>
                    </select>
                  </div>
                </div>

                <div class="form-group row mb-4">
                  <div class="col-sm-12 col-md-7 offset-4">
                    <input type="hidden" class="form-control" name="id" value="<%= product.id %>">
                    <button type="button" class="btn btn-secondary cancel_btn">Cancel</button>
                    <button type="submit" class="btn btn-primary">Update</button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

  </section>
</div>


<%- include('../partials/footer'); %>

<script>
  $(document).ready(function () {

  });
</script>