<%- include('../partials/header'); %>

<%


%>

<!-- Main Content -->
<div class="main-content">
  <section class="section">
    <div class="section-header">
      <h1 id="animated_box"><%= currentModule; %></h1>
    </div>

    <div class="section-body animate__animated  animate__backInUp">

      <div class="row">
        <div class="col-md-8 offset-md-2">
          <div class="card">
            <div class="card-header">
              <h4><%= currentSubModule %></h4>
            </div>
            <div class="card-body">
              <form id="productAddEditForm" class="form_advanced_validation"
                action="/<%= prefixBaseName; %>/<%= modelBaseName; %>/addUpdate" method="POST" autocomplete="off"
                enctype="multipart/form-data">

                <div class="form-group">
                  <label>Name</label>
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <div class="input-group-text">
                        <i class="fas fa-cube"></i>
                      </div>
                    </div>
                    <input type="text" class="form-control" name="name" value="<%= row && row.name; %>" required
                      disabled>
                  </div>
                </div>


                <div class="form-group">
                  <label>Image</label> <br>
                  <img src="/uploads/category/<%= row && row.image %>" width=50% alt="">
                </div>
                <div class="form-group row mb-4">
                  <div class="col-sm-12 col-md-4 offset-md-4">
                    <input type="hidden" class="form-control" name="id" value="<%= row.id %>">
                    <button type="button" class="btn btn-secondary cancel_btn w-100">Back</button>
                    <!-- <button type="submit" class="btn btn-primary">Update</button> -->
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

  </section>
</div>


