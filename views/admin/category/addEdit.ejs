<%- include('../partials/header'); %>

<!-- Main Content -->
<div class="main-content">
	<section class="section">
		<div class="section-header">
			<h1 id="animated_box"><%= currentModule; %></h1>
		</div>

		<div class="section-body animate__animated  animate__backInUp">

			<div class="row">
				<div class="col-md-8 offset-md-2">
					<div class="card">
						<div class="card-header">
							<h4><%= currentSubModule %></h4>
						</div>
						<div class="card-body">
							<form id="userAddEditForm" class="form_advanced_validation"
								action="/<%= prefixBaseName; %>/<%= modelBaseName; %>/addUpdate" method="POST" autocomplete="off"
								enctype="multipart/form-data">

								<div class="form-group">
									<label>Name</label>
									<div class="input-group">
										<div class="input-group-prepend">
											<div class="input-group-text">
												<i class="fas fa-cube"></i>
											</div>
										</div>
										<input type="text" class="form-control" name="name" value="<%= row && row.name; %>" required>
									</div>
								</div>
								<div class="form-group">
                                    <label>Image</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">
                                                <i class="fas fa-camera-retro"></i>
                                            </div>
										</div>

                                        <%  if (row) { %>
											<div id="image-preview" class="image-preview" style='background-image:url("/uploads/category/<%= row && row.image %>");background-size: 100%;'>
                                            <% } else { %> 
                                                <div id="image-preview" class="image-preview" >
														<label for="image-upload" id="image-label">Choose File</label>

														<input type="file" name="image" id="image-upload"  required/>

                                                <% } %>  
                                          
                                        </div>
                                    </div>
                                </div>
								</div>

								<br><br>
								<% if (row) { %>
								<input type="hidden" class="form-control" name="id" value="<%= row && row.id; %>" required>
								<% } %>
								<input type="hidden" class="form-control" name="redirectUrl"
									value="/<%= prefixBaseName; %>/<%= modelBaseName; %>" required>

								<div class="form-group row mb-4">
									<div class="col-sm-12 col-md-4 offset-md-4">
										<button type="submit" class="btn btn-primary w-100"><%= row ? 'Update' : 'Submit'; %></button>
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>

	</section>
</div>


<%- include('../partials/footer'); %>
<script>
	$(document).ready(function () {
		$("#parentCategory").on("change", function () {
			var tt = $('option:selected', this).attr('data-select2-id');
			if (tt == 16) {
				$("#showHide").show();
			} else {
				$("#showHide").hide();
			}

		});
	});
</script>